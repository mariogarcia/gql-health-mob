<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gql.health.mob" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_orange"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">

        <activity
            android:name="gql.health.mob.SplashScreenActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".meal.MealListActivity"/>
        <activity
            android:name=".meal.MealNewActivity"
            android:parentActivityName=".meal.MealListActivity"/>
        <activity android:name=".meal.MealNewEntryActivity"/>
    </application>

</manifest>
