<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/meal_item_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Description"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/font_secondary"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/meal_item_how_many"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="How many"
            android:textColor="@color/font_primary"
            android:textColorHint="@color/font_secondary"
            android:textSize="28sp" />

        <Spinner
            android:id="@+id/meal_item_unit_type"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:textColor="@color/font_primary"
            android:textSize="28sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">
    <Button
        android:id="@+id/entry_item_button_save"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/big_button_height"
        android:layout_marginTop="60dp"
        android:background="@drawable/big_button_primary"
        android:text="Add Item to cart"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/entry_item_button_cancel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/big_button_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/big_button_secondary"
        android:text="Back to cart"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />
        </LinearLayout>
</LinearLayout>